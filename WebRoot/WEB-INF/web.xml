<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <filter>
  <filter-name>encode</filter-name>
  <filter-class>filter.EncodingFilter</filter-class>
  <init-param>
  <param-name>encode</param-name>
  <param-value>utf-8</param-value>
  </init-param>
  </filter>
  <filter-mapping>
  <filter-name>encode</filter-name>
  <url-pattern>*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>checkservlet</servlet-name>
    <servlet-class>servlet.checkservlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>addOperatorservlet</servlet-name>
    <servlet-class>servlet.addOperatorservlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>checkopNameservlet</servlet-name>
    <servlet-class>servlet.checkopNameservlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>updateOperatorservlet</servlet-name>
    <servlet-class>servlet.updateOperatorservlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>resourseservlet</servlet-name>
    <servlet-class>servlet.resourseservlet</servlet-class>
  </servlet>





  <servlet-mapping>
    <servlet-name>checkservlet</servlet-name>
    <url-pattern>/check</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>addOperatorservlet</servlet-name>
    <url-pattern>/addOperator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>checkopNameservlet</servlet-name>
    <url-pattern>/checkopName</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>updateOperatorservlet</servlet-name>
    <url-pattern>/updateOperator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>resourseservlet</servlet-name>
    <url-pattern>/resourse</url-pattern>
  </servlet-mapping>
 <filter>
<filter-name>login</filter-name>
<filter-class>filter.LoginFitler</filter-class>
</filter>
<filter-mapping>
<filter-name>login</filter-name>
<url-pattern>/main.jsp</url-pattern>
</filter-mapping>
<filter-mapping>
<filter-name>login</filter-name>
<url-pattern>/newOperator.jsp</url-pattern>
</filter-mapping>

  







  
</web-app>